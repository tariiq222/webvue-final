# üåç WebCore Dashboard - Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Application Settings
VITE_APP_NAME=WebCore Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Advanced Content Management System

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_API=false
VITE_SHOW_DEVTOOLS=true

# Authentication
VITE_JWT_STORAGE_KEY=webcore_token
VITE_REFRESH_TOKEN_KEY=webcore_refresh_token
VITE_SESSION_TIMEOUT=3600000

# Features
VITE_ENABLE_2FA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PLUGINS=true
VITE_ENABLE_ANALYTICS=true

# UI Settings
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_RTL=true

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# Monitoring
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
