# =================================
# WebCore v2.0 Environment Variables
# =================================

# Application
NODE_ENV=development
APP_NAME=WebCore
APP_VERSION=2.0.0
APP_URL=http://localhost:3000
APP_PORT=3000

# Database Configuration
# DATABASE_URL=postgresql://webcore:password@localhost:5432/webcore_dev
# DATABASE_PROVIDER=postgresql

# Development Database (SQLite) - استخدام SQLite للتطوير
DATABASE_URL=file:./server/database/dev.db
DATABASE_PROVIDER=sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@webcore.dev

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./storage/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,zip

# Plugin System
PLUGIN_SANDBOX_ENABLED=true
PLUGIN_MAX_MEMORY=128
PLUGIN_MAX_CPU=50
PLUGIN_TIMEOUT=30000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_FILE=./storage/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Frontend Configuration
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=WebCore
VITE_APP_VERSION=2.0.0

# Development Tools
DEBUG=webcore:*
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./storage/backups

# SSL/TLS (Production)
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# External Services
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# Notification Services
PUSH_NOTIFICATIONS_ENABLED=false
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@webcore.dev

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_URL=https://cdn.webcore.dev
CDN_ACCESS_KEY=
CDN_SECRET_KEY=

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000

# Feature Flags
FEATURE_PLUGIN_MARKETPLACE=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MULTI_TENANT=false
FEATURE_API_VERSIONING=true

# Performance
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Development Only
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_DATA=false
