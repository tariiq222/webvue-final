# 🚀 WebCore Server Environment Variables - Production (Render.com)

# 🌍 Application Environment
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# 🗄️ Database Configuration (من Render PostgreSQL)
DATABASE_URL="postgresql://webcore:password@hostname:5432/webcore"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# 🔐 JWT Configuration (سيتم توليدها تلقائياً في Render)
JWT_SECRET="your-super-secret-jwt-key-change-in-production-32chars"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-key-change-in-production-32chars"
REFRESH_TOKEN_EXPIRES_IN="7d"

# 🔒 Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 📁 File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/zip
UPLOAD_PATH=/tmp/uploads

# 🔌 Plugin Configuration
PLUGIN_PATH=/tmp/plugins
PLUGIN_MAX_SIZE=52428800
PLUGIN_ALLOWED_TYPES=application/zip,application/x-zip-compressed

# 📝 Logging Configuration
LOG_LEVEL=info
LOG_FILE=/tmp/logs/webcore.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 📊 Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# 🌐 CORS Configuration
CORS_ORIGIN=https://webcore-frontend.onrender.com
CORS_CREDENTIALS=true

# 🛡️ Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# 🔔 Notification Configuration
NOTIFICATION_CLEANUP_DAYS=30
NOTIFICATION_MAX_PER_USER=100

# 🎯 2FA Configuration
TWO_FA_ISSUER=WebCore
TWO_FA_WINDOW=2

# 📈 Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# 🧪 Testing Configuration (لا تستخدم في الإنتاج)
# TEST_DATABASE_URL=""
# TEST_JWT_SECRET=""

# 🔧 Production Configuration
DEV_SEED_DATA=false
DEV_AUTO_MIGRATE=false
DEV_RESET_DB=false
