# 🔧 WebCore Server Environment Variables
# نسخ هذا الملف إلى .env وتحديث القيم

# 🌍 Application Environment
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 🗄️ Database Configuration
DATABASE_URL="postgresql://webcore:password@localhost:5432/webcore_dev"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# 🔐 JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-key-change-in-production"
REFRESH_TOKEN_EXPIRES_IN="7d"

# 🔒 Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 📧 Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 📁 File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/zip
UPLOAD_PATH=./storage/uploads

# 🔌 Plugin Configuration
PLUGIN_PATH=./storage/plugins
PLUGIN_MAX_SIZE=52428800
PLUGIN_ALLOWED_TYPES=application/zip,application/x-zip-compressed

# 📊 Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# 📝 Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/webcore.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 🔍 Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# 🌐 CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# 🛡️ Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# 🔔 Notification Configuration
NOTIFICATION_CLEANUP_DAYS=30
NOTIFICATION_MAX_PER_USER=100

# 🎯 2FA Configuration
TWO_FA_ISSUER=WebCore
TWO_FA_WINDOW=2

# 📈 Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# 🧪 Testing Configuration (Development Only)
TEST_DATABASE_URL="postgresql://webcore:password@localhost:5432/webcore_test"
TEST_JWT_SECRET="test-jwt-secret"
TEST_REFRESH_SECRET="test-refresh-secret"

# 🐳 Docker Configuration
DOCKER_POSTGRES_USER=webcore
DOCKER_POSTGRES_PASSWORD=password
DOCKER_POSTGRES_DB=webcore_dev

# 🔧 Development Configuration
DEV_SEED_DATA=true
DEV_AUTO_MIGRATE=true
DEV_RESET_DB=false
